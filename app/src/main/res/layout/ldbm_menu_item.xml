<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#ffffff"
    >
    <!--菜单-->
    <LinearLayout
        android:id="@+id/menu_item_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

    <!-- 图片 -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/menu_item_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />
    </RelativeLayout>

    <!--标题和新建按钮-->
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!--标题-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        >
        <TextView
            android:text=""
            android:id="@+id/menu_item_title"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"/>
        <TextView
            android:text=""
            android:id="@+id/menu_item_describe"
            android:textSize="12dp"
            android:textColor="@color/menuText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"/>
    </LinearLayout>

        <!--新建按钮-->
    <LinearLayout
        android:id="@+id/menu_item_createLayout"
        android:orientation="horizontal"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        >
        <RelativeLayout
            android:layout_width="1px"
            android:layout_height="50dp"
            android:background="@color/menuText"
            >
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            >
            <Button
                android:id="@+id/menu_item_createButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/menu_item_add"
                />
        </RelativeLayout>


    </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
    <!--添加-->
    <LinearLayout
        android:id="@+id/menu_item_foot"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal"
            >
            <Button
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/menu_add"
                />
            <TextView
                android:text="@string/menu_tiem_addShortcut"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>