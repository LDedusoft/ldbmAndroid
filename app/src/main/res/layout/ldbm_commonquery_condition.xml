<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/commonQueryConditionBackground"
    >
    <LinearLayout
        android:id="@+id/common_query_All_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <!--条件-->
                <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >
                    <!--汇总方式-->
                    <LinearLayout
                        android:id="@+id/common_query_restockCondition"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/commonQuery_condition_height"
                        android:visibility="visible"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                >
                                <TextView
                                    android:text="汇总方式:"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:textSize="@dimen/commonQuery_condition_textsize"
                                    android:textColor="@color/inputListItemText"
                                    android:textColorHint="@color/inputListItemHint"
                                    android:gravity="center_vertical|left"
                                    android:paddingLeft="10dp"
                                    />
                                <TextView
                                    android:text="按仓库汇总"
                                    android:id="@+id/common_query_restock_type"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:textSize="@dimen/commonQuery_condition_textsize"
                                    android:textColor="@color/commonQueryConditionText"
                                    android:textColorHint="@color/inputListItemHint"
                                    android:gravity="center_vertical|left"
                                    android:background="@null"
                                    android:hint="请选择"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0"
                                >
                                <!--占位-->
                            </LinearLayout>
                        </LinearLayout>
                        <!--分割线-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:paddingLeft="10dp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/commonQueryConditionLine"
                                >
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout><!--end 汇总方式-->
                    <!--经手人-->
                    <LinearLayout
                        android:id="@+id/common_query_salesmanCondition"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/commonQuery_condition_height"
                        android:visibility="visible"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                >
                                <TextView
                                    android:text="经手人:"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:textSize="@dimen/commonQuery_condition_textsize"
                                    android:textColor="@color/inputListItemText"
                                    android:textColorHint="@color/inputListItemHint"
                                    android:gravity="center_vertical|left"
                                    android:paddingLeft="10dp"
                                    />
                                <TextView
                                    android:id="@+id/common_query_salesman"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:textSize="@dimen/commonQuery_condition_textsize"
                                    android:textColor="@color/commonQueryConditionText"
                                    android:textColorHint="@color/inputListItemHint"
                                    android:gravity="center_vertical|left"
                                    android:background="@null"
                                    android:hint="请选择"
                                    />

                            </LinearLayout>
                        </LinearLayout>
                        <!--分割线-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:paddingLeft="10dp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/commonQueryConditionLine"
                                >
                            </RelativeLayout>
                    </LinearLayout>
                    </LinearLayout><!--end 经手人-->
                    <!--时间条件-->
                    <LinearLayout
                        android:id="@+id/common_query_timeCondition"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/commonQuery_condition_height">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:text="起始时间:"
                                android:textSize="@dimen/commonQuery_condition_textsize"
                                android:textColor="@color/inputListItemText"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical|left"
                                android:layout_weight="1"
                                android:paddingLeft="10dp"
                                />
                            <TextView
                                android:id="@+id/common_query_startTime"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/commonQuery_condition_textsize"
                                android:textColor="@color/commonQueryConditionText"
                                android:textColorHint="@color/inputListItemHint"
                                android:gravity="center_vertical|left"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:text="结束时间:"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/commonQuery_condition_textsize"
                                android:textColor="@color/inputListItemText"
                                android:gravity="center"
                                android:layout_weight="1"
                                />
                            <TextView
                                android:id="@+id/common_query_endTime"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/commonQuery_condition_textsize"
                                android:textColor="@color/commonQueryConditionText"
                                android:textColorHint="@color/inputListItemHint"
                                android:gravity="center_vertical|left"
                                />
                            </LinearLayout>
                    </LinearLayout><!--end 时间条件-->
                    <!--选择客户信息-->
                    <LinearLayout
                        android:id="@+id/common_query_ClientCondition"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/commonQuery_condition_height"
                        android:visibility="visible"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                >
                                <TextView
                                    android:text="客户名称:"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:textSize="@dimen/commonQuery_condition_textsize"
                                    android:textColor="@color/inputListItemText"
                                    android:textColorHint="@color/inputListItemHint"
                                    android:gravity="center_vertical|left"
                                    android:paddingLeft="10dp"
                                    />
                                <TextView
                                    android:id="@+id/common_query_client"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:textSize="@dimen/commonQuery_condition_textsize"
                                    android:textColor="@color/commonQueryConditionText"
                                    android:textColorHint="@color/inputListItemHint"
                                    android:gravity="center_vertical|left"
                                    android:background="@null"
                                    android:hint="请选择"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                >
                                <TextView
                                    android:text="客户编号:"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:textSize="@dimen/commonQuery_condition_textsize"
                                    android:textColor="@color/inputListItemText"
                                    android:textColorHint="@color/inputListItemHint"
                                    android:gravity="center_vertical|left"
                                    android:paddingLeft="10dp"
                                    />
                                <TextView
                                    android:id="@+id/common_query_clientBianhao"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:textSize="@dimen/commonQuery_condition_textsize"
                                    android:textColor="@color/commonQueryConditionText"
                                    android:textColorHint="@color/inputListItemHint"
                                    android:gravity="center_vertical|left"
                                    android:background="@null"
                                    android:hint="请选择"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <!--分割线 暂不显示-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:paddingLeft="10dp"
                            android:visibility="gone"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/commonQueryConditionLine"
                                >
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout><!--end 选择客户信息-->


                </LinearLayout>

                <!--查询-->
                <LinearLayout
            android:layout_width="55dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/common_query_selBtn"
                android:text="查询"
                android:textSize="@dimen/commonQuery_condition_textsize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:paddingRight="10dp"
                />
        </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>