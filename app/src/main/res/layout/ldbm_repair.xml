<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/repair_top_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">
        <com.ldedusoft.ldbm.component.customComp.TopBar
            android:id="@+id/repair_top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.ldedusoft.ldbm.component.customComp.TopBar>
    </LinearLayout>

    <!--列表  -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repair_top_bar_layout"
        android:layout_above="@+id/repair_bottom_bar_layout"
        >
        <ListView
            android:id="@+id/repair_menu_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/repair_bottom_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <com.ldedusoft.ldbm.component.customComp.BottomBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.ldedusoft.ldbm.component.customComp.BottomBar>

    </LinearLayout>
</RelativeLayout>