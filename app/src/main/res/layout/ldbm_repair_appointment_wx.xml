<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!--维修接待-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/appointment_wx_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.ldedusoft.ldbm.component.customComp.FormToolBar
                android:id="@+id/appointment_wx_toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_bar_height">
            </com.ldedusoft.ldbm.component.customComp.FormToolBar>

        </LinearLayout>

    <ListView
        android:id="@+id/appointment_WX_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:transcriptMode="normal"
        android:layout_below="@id/appointment_wx_toolbar_layout"
        android:layout_marginBottom="@dimen/form_bottom_height"
        ></ListView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/form_bottom_height"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:paddingTop="10dp"
            >
            <Button
                android:id="@+id/form_bottom_picture"
                android:text="拍照"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/button_style"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                android:padding="0dp"
                android:gravity="center"
                />
            <Button
                android:id="@+id/form_bottom_qianming"
                android:text="签名"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/button_style"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                android:padding="0dp"
                android:gravity="center"
                />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>