<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonQuery_item_height"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        >
        <TextView
            android:text="名称"
            android:layout_width="@dimen/commonQuery_item_title_width"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/salesman_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonQuery_item_height"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        >
        <TextView
            android:text="编号"
            android:layout_width="@dimen/commonQuery_item_title_width"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/salesman_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonQuery_item_height"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        >
        <TextView
            android:text="公司"
            android:layout_width="@dimen/commonQuery_item_title_width"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/salesman_company"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonQuery_item_height"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        >
        <TextView
            android:text="部门"
            android:layout_width="@dimen/commonQuery_item_title_width"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/salesman_department"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            />
    </LinearLayout>
</LinearLayout>