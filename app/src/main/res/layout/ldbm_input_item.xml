<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_list_item_height">

<TextView
    android:id="@+id/input_item_title"
    android:text="标题:  "
    android:gravity="right|center_vertical"
    android:layout_width="60dp"
    android:layout_height="match_parent"
    android:layout_marginRight="20dp"
    />

    <EditText
        android:id="@+id/input_item_edittext"
        android:text="输入框"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/input_item_textview"
        android:text="文本内容"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

        <TextView
            android:id="@+id/input_item_clicktext"
            android:text="文本内容"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/input_item_timetext"
            android:text="文本内容"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            />

    <CheckBox
        android:text="复选框"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
    <RadioButton
        android:text="单选框"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>